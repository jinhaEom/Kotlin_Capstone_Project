<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323">

    <TextView
        android:id="@+id/introduce"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="개발자 소개"
        android:textColor="@color/gray_cc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/gray_cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduce"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/developer_name"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="개발자 : 엄진하"
        android:textColor="@color/gray_cc"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line1" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/gray_cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer_name"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/address"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="주소 : 인천광역시 연수구 동춘3동"
        android:textColor="@color/gray_cc"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/line2" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/gray_cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/address"
        app:layout_constraintVertical_bias="0.079"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/email_address"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="이메일 주소 : umjin98@naver.com"
        android:textColor="@color/gray_cc"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/line3" />

    <View
        android:id="@+id/line4"
        android:background="@color/gray_cc"
        android:layout_width="match_parent"
        android:layout_height="3px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/email_address"
        app:layout_constraintVertical_bias="0.084"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/Homepage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10sp"
        android:text="홈페이지 : www.bu.ac.kr"
        android:textColor="@color/gray_cc"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/line4" />

    <View
        android:background="@color/gray_cc"
        android:layout_width="match_parent"
        android:layout_height="3px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/Homepage"
        app:layout_constraintVertical_bias="0.093"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>